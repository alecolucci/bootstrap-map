#!/usr/bin/env node

/**
 * Dependencies
 */

var program = require('commander')
  , restaurants = require('..');

// options

program
  .usage('[options] <address>')
  .option('-a, --all', 'Page and concatenate all possible results.')
  .option('-d, --radius <radius>', 'Radius in meters, defaults to 1000m.', parseInt)
  .option('-s, --service <service>', 'Use service')
  .version(require('../package.json').version)
  .parse(process.argv);

// read stdin

restaurants(program.service || 'opentable', program.args.join(' '), program.radius || 500, program.all, function(err, data) {
  if (err) {
    process.stderr.write(err);
  } else {
    process.stdout.write(JSON.stringify(data, null, '\t'));
  }
});
